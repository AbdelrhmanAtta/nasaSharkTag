        .quiz-container {
            border: 2px solid #007bff;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
            margin-bottom: 50px;
        }

        .quiz-question {
            font-weight: bold;
            color: #dee1e3;
            margin-bottom: 15px;
        }

        .quiz-choice {
            margin-bottom: 10px;
        }

        .quiz-choice input[type="radio"] {
            margin-right: 10px;
        }

        .quiz-choice label {
            cursor: pointer;
            font-weight: 500;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            transition: 0.2s;
        }

        .quiz-choice input[type="radio"]:checked+label {
            background-color: #edf0f3;
            color: rgb(35, 34, 34)
        }

        .submit-quiz-btn {
            margin-top: 15px;
        }
    </style>
</head>

